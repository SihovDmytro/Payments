<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>loginPage.jsp</welcome-file>
    </welcome-file-list>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>com.my.payment.filters.AccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>getCards getUserInfo getPayments changeCardStatus getUsers changeUserStatus</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>getCards getUserInfo logout addCard getPayments makePayment commitPayment changeCardStatus topUp createCard cancelPayment changeCardName</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>errorCommand</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login registration logout changeLocale</param-value>
        </init-param>
    </filter>
</web-app>